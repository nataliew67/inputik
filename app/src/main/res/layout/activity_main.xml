<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D6D6D6"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:context=".MainActivity">

            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="670dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:text="Форма"
                    android:textColor="#FFAE35"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/lastNameEditText"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="65dp"
                    android:background="#FFAE35"
                    android:ems="10"
                    android:hint="Фамилия"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/NameEditText"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="115dp"
                    android:background="#FFAE35"
                    android:ems="10"
                    android:hint="Имя"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/surnameEditText"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="165dp"
                    android:background="#FFAE35"
                    android:ems="10"
                    android:hint="Отчество"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />


                <EditText
                    android:id="@+id/TextEmailAddress"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="215dp"
                    android:background="#FFAE35"
                    android:ems="10"
                    android:hint="Адрес эл.почты"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />


                <EditText
                    android:id="@+id/Textphone"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="265dp"
                    android:background="#FFAE35"
                    android:ems="10"
                    android:hint="Номер телефона"
                    android:inputType="phone"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/Textage"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="315dp"
                    android:background="#FFAE35"
                    android:ems="10"
                    android:hint="Возраст"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />


                <TextView
                    android:id="@+id/textAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="370dp"
                    android:text="Ваше любимое животное?"
                    android:textColor="#FFAE35"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="-100dp"
                    android:layout_marginTop="400dp"
                    android:text="Кошка"
                    android:textColor="#FFAE35" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="400dp"
                    android:text="Собака"
                    android:textColor="#FFAE35" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="450dp"
                    android:text="Хомяк"
                    android:textColor="#FFAE35" />


                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="-100dp"
                    android:layout_marginTop="450dp"
                    android:text="Крысик"
                    android:textColor="#FFAE35" />


                <RadioGroup
                    android:layout_width="350dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="510dp">


                    <RadioButton
                        android:id="@+id/zpradioButton2"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Зарплата"
                        android:textColor="#FFAE35" />

                    <RadioButton
                        android:id="@+id/freeradioButton2"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Волонтер"
                        android:textColor="#FFAE35" />
                </RadioGroup>


                <EditText
                    android:id="@+id/zpsumEditText"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="580dp"
                    android:background="#FFAE35"
                    android:textColor="@color/white"
                    android:ems="10"
                    android:hint="Желанная зп"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/white"
                    android:visibility="gone"
              />


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>
